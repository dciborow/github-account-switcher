{
  "manifest_version": 2,
  "name": "GitHub Account Switcher",
  "version": "1.0",
  "description": "Automatically picks the correct account when accessing a GitHub repository.",
  "permissions": [
    "tabs",
    "https://github.com/*"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["https://github.com/*"],
      "js": ["content.js"]
    }
  ]
}
